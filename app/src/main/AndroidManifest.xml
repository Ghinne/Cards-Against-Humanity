<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gproductions.card_against_humanity">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:resizeableActivity="false"
        android:allowBackup="true">
        <activity
            android:name=".AwardingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ChooseNicknameActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ChooseMatchActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".WaitPlayers"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DistributingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ShufflingActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".GameActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignInActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>